    ViewData["Title"] = "ItemsPedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ItemsPedido</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PedidoItemViewModel[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoItemViewModel[0].ProdutoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoItemViewModel[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoItemViewModel[0].Valor)
