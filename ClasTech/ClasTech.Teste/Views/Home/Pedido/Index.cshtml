@page
@model ClasTech.Teste.Views.Home.Pedido.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PedidoViewModel[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoViewModel[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoViewModel[0].ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoViewModel[0].DataPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoViewModel[0].Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PedidoViewModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
