@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>Lista de Pedidos</h1>
<form method="post" class="card p-3">
    <div class="form-group mb-0 align-middle">

        <label asp-for="pedido.Valor"> Mairor Valor Total</label>
        <input asp-for="pedido.Valor" class="mr-5" />

        <label asp-for="pedido.Ativo">Pedidos Ativos</label>
        <input type="checkbox" asp-for="pedido.Ativo" class="mr-5">

        <button class="btn btn-primary">Buscar</button>
    </div>
</form>
<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Valor</th>
            <th scope="col">Ativo</th>
        </tr>
    </thead>
    @foreach (var pedido in Model.ListaDeProdutos)
    {
        <tr>
            <td>@pedido.Nome</td>
            <td>@($"{pedido.ValorTotal:C}")</td>
            <td>@pedido.Ativo</td>
        </tr>
    }
</table>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}